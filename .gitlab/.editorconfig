; Check http://editorconfig.org/ for more informations

; Top-most EditorConfig file

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.py]
indent_style = space
trim_trailing_whitespace = true
indent_size = 4
end_of_line = LF

[*.{txt,md,yml}]
trim_trailing_whitespace = true
insert_final_newline     = true
indent_style             = space
indent_size              = 2


[*.list]
trim_trailing_whitespace = true
insert_final_newline = true
